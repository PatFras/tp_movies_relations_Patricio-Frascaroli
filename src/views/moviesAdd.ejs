<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario ">
        <form action="/movies/create" method="POST" enctype="multipart/form-data">
            <label for="title">Title </label>
            <p><input type="text" name="title" id="" required></p>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" required> </p>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" required></p>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" required></p>
            <label for="length">Length </label>
            <p><input type="number" name="length" id="" required></p>
            <label for="genreID">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <option value="" disabled selected>- select genre - </option>
                    <% genres.forEach(genre => { %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                    <% }); %>
                </select>
            </p>
            <br>
            <label for="formFile">Cargar imagen </label>
            <p><input type="file" name="image" id="formFile"></p>
            <br>
            <div>
                <h5>Actores</h5>
                <br>
                <% actors.forEach(actor => { %>
                    <div class="form-check">
                        <input name='actors' class="form-check-input" type="checkbox" value="<%= actor.id %>" id="actor<%= actor.id %>" >
                        <label class="form-check-label" for="actor<%= actor.id %>">
                          <%= actor.first_name  %>  <%= actor.last_name  %>
                        </label>
                      </div>
                    <% }); %>
            </div>
            <br>
            <div class="d-flex gap-1">
                <button class="btn btn-success" type="submit">Agregar</button>
                <a  class="btn btn-primary" href="/movies">Lista de películas</a>
            </div>
        </form>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</body>

</html>